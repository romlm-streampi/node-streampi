{
	"compilerOptions": {
		"outDir": "dist",
		"module": "es6",
		"target": "esnext",
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"types": ["node"],
		"typeRoots": ["src/typings.d.ts"],
		"paths": {
			"@pages/*": ["./pages/*"],
			"@components/*": ["./src/components/*"],
			"@model/*": ["./src/model/*"],
			"@utils/*": ["./src/utils/*"]
		}
	}
}
